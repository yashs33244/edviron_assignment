FROM oven/bun:1.0.20 as base

WORKDIR /app

# Install dependencies
COPY package.json bun.lock ./
RUN bun install --frozen-lockfile

# Copy source code
COPY . .

# Generate Prisma client
RUN bunx prisma generate

# Expose port
EXPOSE 4000

# Start the application in development mode
CMD ["bun", "run", "dev"]
